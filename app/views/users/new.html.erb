<h1 class="text-center">Signup for Alpha Blog</h1>

<%= render 'shared/errors', obj: @user  %>

<div class='row'>
  <div class='col-12'>
    <%= form_for @user do |f| %>
      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :username %>
        </div> 
        <div class="col-sm-10">
          <%= f.text_field :username, class: "form-control", placeholder: "Uername", autofocus: true %>
        </div>   
      </div>
      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :email %>
        </div> 
        <div class="col-sm-10">
          <%= f.email_field :email, class: "form-control", placeholder: "enter e-mail" %>  
        </div>
      </div>
      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :password %>
        </div> 
        <div class="col-sm-10">
          <%= f.password_field :password, class: "form-control", placeholder: "enter password" %>  
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-10">
          <%= f.submit "Sign up", class: "btn btn-primary btn-lg" %>  
        </div>  
      </div>
    <% end %>

    <div class="col-sm-4 offset-sm-4">
      [<%= link_to "Back to Articles list", articles_path %>]
    </div>
  </div>
 </div> 